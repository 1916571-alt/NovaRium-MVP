# ============================================================
# Streamlit Cloud Secrets Configuration
# ============================================================
# Copy the contents below to Streamlit Cloud:
# App Settings > Secrets
#
# This file is for reference only. Do not commit actual secrets.
# ============================================================

# ===========================================
# Database Configuration
# ===========================================
# For Streamlit Cloud, always use 'supabase'
DB_MODE = "supabase"

# PostgreSQL Connection (Supabase)
# Get from: Supabase Dashboard > Project Settings > Database > Connection string
DATABASE_URL = "postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# ===========================================
# Supabase API (Optional)
# ===========================================
# Get from: Supabase Dashboard > Project Settings > API
SUPABASE_URL = "https://[PROJECT].supabase.co"
SUPABASE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ===========================================
# Service URLs
# ===========================================
# Your Render.com FastAPI URL
TARGET_APP_URL = "https://novarium-api.onrender.com"

# CORS (your Streamlit Cloud URL)
ALLOWED_ORIGINS = "https://novarium-mvp.streamlit.app"

# ===========================================
# Application Settings
# ===========================================
ENV = "production"
LOG_LEVEL = "WARNING"
DEBUG = "false"

